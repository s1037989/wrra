<script type="text/javascript">
var allowHumanMsg = 1;
var c_response = '';
var alert;
var alert_msg;

function contextMenu() {
	console.log('Context Menu: '+localStorage['role']);
	$.contextMenu({
	    // define which elements trigger this menu
	    selector: ".context-item",
	    // define the elements of the menu
	    build: function($trigger, e) {
		$trigger.contextMenu(true);
		if ( localStorage['role']=="admin" ) {
			return {
			    callback: function(key, options) {
				var m = "clicked: " + key;
				window.console && console.log(m) || alert(m); 
			    },
			    items: {
				assign_auctioneer: {
					name: "Assign Auctioneer",
					items: {
						a: {name: "A", callback: function(key, opt){ console.log(key); }},
						b: {name: "B", callback: function(key, opt){ console.log(key); }},
					},
				},
				notify_timer: {name: "Request Timer Start", callback: function(key, opt){ console.log(key); }},
				notify_sell: {name: "Request Item Sale", callback: function(key, opt){ console.log(key); }},
			    }
			    // there's more, have a look at the demos and docs...
			};
		} else if ( localStorage['role']=="operator" ) {
			return {
			    callback: function(key, options) {
				var m = "clicked: " + key;
				window.console && console.log(m) || alert(m); 
			    },
			    items: {
				place_bid: {name: "Place Bid", callback: function(key, opt){ console.log(key); }},
			    }
			};
		} else if ( localStorage['role']=="auctioneer" ) {
			return {
			    callback: function(key, options) {
				var m = "clicked: " + key;
				window.console && console.log(m) || alert(m); 
			    },
			    items: {
				acknowledge_newbid: {name: "Ackknowledge", callback: function(key, opt){ console.log(key); }},
				start_timer: {name: "Start Timer", callback: function(key, opt){ console.log(key); }},
				sell: {name: "Sell Item", callback: function(key, opt){ console.log(key); }},
			    }
			};
		} else {
			$trigger.contextMenu(false);
		}
	    }
	});
}

function processHeader(value) {
	if ( value ) {
		$("#header").processTemplateStart("<%= url_for 'header' %>", null, <%= app->config->{refresh}->{header} || 17500 %>, null, {
			type: 'GET',
			headers: {Accept: 'application/json'},
			on_success: function(data){
				var msg=$('#alert-get').html();
				if (msg){
					if (msg != c_response && allowHumanMsg){$(window).humanMsg(msg, {autoHide: 2.25*1000});}
					allowHumanMsg = 1;
					c_response = msg;
					$('table.getalert').show();
				} else {
					$('table.getalert').hide();
				}
				var headergroupHeight = 0;
				$('#header').not(':hidden').each(function(){headergroupHeight = headergroupHeight + $(this).height() + 10;});   // Add 10 for the 10px padding in #header
				$('table.setalert tr.alert').not(':hidden').each(function(){headergroupHeight = headergroupHeight + $(this).height();});
				$('table.setalert tr.msg').not(':hidden').each(function(){headergroupHeight = headergroupHeight + $(this).height();});
				$('table.getalert').not(':hidden').each(function(){headergroupHeight = headergroupHeight + $(this).height();});
				$('body').css('height', ($('body').height()-headergroupHeight-50)+'px');    // Sub 50 for the body bottom padding
				$('body').css('padding-top', headergroupHeight+'px');

				on_click_livechat();
				on_click_paypal();
				on_click_alert();
				on_click_clearalert();
				on_click_register();
				on_click_operator();
				on_click_bid();
				on_click_ident();
				on_click_unident();

				contextMenu();

				return true;
			}
		});
	} else {
		$("#header").processTemplateStop();
	}
}

function processBidding(value) {
	if ( value ) {
		$("#bidding").processTemplateStart("<%= url_for %>", null, <%= app->config->{refresh}->{bidding} || 10000 %>, null, {
			type: 'POST',
			headers: {Accept: 'application/json'},
			on_success: function(elem){
				if (!!$(this).attr('item') && $(this).find('span.truncate').html().length > $(this).find('span.truncate').attr("length")){content.push($(this).attr('item'));}
				if (!!$(this).attr('message') && $(this).find('span.truncate').html().length > $(this).find('span.truncate').attr("length")){content.push($(this).attr('message'));}

				$('span.truncate').each(function(){
					var text = $(this).html();
					var len = $(this).attr('length') || 50;
					//text = text.length > len ? text.substring(0,len)+'... <a href="tooltip.html?item_id='+$(this).attr("itemid")+'" target="_new"><img src="img/paper1.gif" /></a>' : text;
					text = text.length > len ? text.substring(0,len)+'... <img src="img/paper1.gif" alt="'+text+'"/>' : text;
					$(this).html(text);
				});

				$('.currency').each(function(){
					$(this).formatCurrency({roundToDecimalPlace:0});
				});

				$('table.items tbody tr').hover(
					function(){
						$(this).addClass("highlight");
					},
					function(){
						$(this).removeClass("highlight");
					}
				);

				$( document ).tooltip({
				      items: "img, [pic], [title]",
				      content: function() {
					  var element = $( this );
					  if ( element.is( "[pic]" ) ) {
					      var text = element.attr('text');
					      console.log("[pic]: <img src='"+text+"' alt='"+text+"' />");
                                              return "<img src='"+text+"' alt='"+text+"' />";
					  }
					  if ( element.is( "[title]" ) ) {
					      console.log("[title]: "+element.attr( "title" ));
					      return element.attr( "title" );
					  }
					  if ( element.is( "img" ) ) {
					      console.log("Img: "+element.attr( "alt" ));
					      return element.attr( "alt" );
					  }
				      }
				});

				contextMenu();
			}
		});
	} else {
		$("#bidding").processTemplateStop();
	}
}

function on_click_livechat(data) {
	$("#dialog-mibew").dialog({autoOpen: false, height: 290, width: 350, modal: true});
	$("#mibew").click(function(){ $("#dialog-mibew").dialog("open"); });
}

function on_click_paypal(data) {
	$("#paypal").click(function(){
		console.log('paypal');
		processHeader(0);
		$("#dialog-paypal").dialog({
			autoOpen: false,
			height: 320,
			width: 380,
			modal: true,
			close: processHeader(1)
		});
		$("#dialog-paypal").dialog("open");
		$("#paypal-os0").autocomplete({
			source: "/api/ac/pay_number",
			minLength: 3,
			select: function(event, ui){
				if (ui.item){
					$('#paypal-name').val(ui.item.name);
					$('#paypal-os1').val(ui.item.address);
					$('#paypal-os2').val(ui.item.csz);
				}
			}
		}).data( "ui-autocomplete" )._renderItem = function( ul, item ) {
		      return $( "<li>" )
		        .append( "<a>" + item.label + " : " + item.desc + "</a>" )
		        .appendTo( ul );
		};
	});
}

function on_click_clearalert(data){
	$("#clearalert").click(function(){
		console.log('clearalert');
		processHeader(0);
		$.ajax({
			url: '/api/alert',
			type: 'DELETE',
			success: processHeader(1)
		});
	});
}

function on_click_alert(data){
	$("table.setalert span.alert").click(function(){
		console.log('alert');
		processHeader(0);
		$("#dialog-alert").dialog({
				autoOpen: false,
				height: 240,
				width: 520,
				modal: true,
				buttons: {
					"Send Alert": function() {
						$("#alert-set-alert").removeClass("ui-state-error");
						$("#alert-set-msg").removeClass("ui-state-error");
						$.post('/api/alert/'+$('input[name="alert-set-alert"]:checked').val(), {msg: $("#alert-set-msg").val()}, function(data){
							processHeader(1);
/*
							if ( data.msg ) {
								$('table.getalert').show();
								$('#alert-get').html(data.msg);
							} else {
								$('table.getalert').hide();
							}
							$('span.alert').each(function(){
								if ($(this).hasClass('selected')){$(this).removeClass('selected');}
							});
*/
						});
						$(this).dialog("close");
					},
					Cancel: function() {
						$(this).dialog("close");
					}
				},
				close: function() {
					$("#alert-set-alert").removeClass("ui-state-error");
					$("#alert-set-msg").removeClass("ui-state-error");
					processHeader(1);
				}
		});
		$("#dialog-alert").dialog("open");
	});
}

function on_click_register(data) {
	$("#register").click(function(){
		console.log('register');
		processHeader(0);
		// Abort if id'd
		$("#dialog-register").dialog({
			autoOpen: false,
			height: 218,
			width: 350,
			modal: true,
			open: function() {
				$('#register-phone').mask("(999) 999-9999");
			},
			buttons: {
				"Register": function(){
					$(this).dialog("disable"); 
					$(this).dialog({title: 'Register...'});
					$.post('/api/request/newuser', {value: $('#register-username').val()+":"+$('#register-bidder').val()+":"+$('#register-phone').val()}, function(){
						processHeader(1);
					});
					$(this).dialog("close");
				},
				Cancel: function(){$(this).dialog("close");}
			},
			close: processHeader(1)
		});
		$("#dialog-register-title").html("Identify yourself.");
		$("#dialog-register").dialog("open");
	});
}

function on_click_operator(data) {
	$(".item-number").click(function(){
        	var item_id=$(this).attr('item_id');
	        var number=$(this).attr('number');
        	var minbid=$(this).attr('minbid');
	        var highbid=$(this).attr('highbid');
		processHeader(0);
		$("#dialog-operator").dialog({
			autoOpen: false,
			height: 218,
			width: 350,
			modal: true,
			open: function() {
				$('form[name=operator] input[name=operator-bid]').val(minbid);
				$('form[name=operator] input[name=operator-phone]').mask("(999) 999-9999");
			},
			buttons: {
				"Bid": function(){
					$(this).dialog("disable"); 
					$(this).dialog({title: 'Bid...'});
					$.post('/api/newbid', {phone: $('#operator-phone').val(),value: item_id+":"+$('#operator-bid').val(),approve: 1}, function(data){
						//var json = $.toJSON(data);
						$.post('/api/request/approve/'+data.request.request_id+'/1', function(){
							$(window).humanMsg("Bid placed! :D", {autoHide: 3*1000})
							processHeader(1);
						});
						$(this).dialog("close");
					});
				},
				Cancel: function(){$(this).dialog("close");}
			},
			close: processHeader(1)
		});
		$("#dialog-operator-title").html("Bid on item "+number+" (Minimum: "+minbid+")");
		$("#dialog-operator").dialog("open");
/*
		$("#dialog-operator").autocomplete({
			source: "/api/ac/bidder",
			minLength: 10,
			select: function(event, ui){
				if (ui.item){
					$('#operator-name').val(ui.item.name);
				}
			}
		});
*/
	});
}

function on_click_ident(data) {
	$("#ident").click(function(){
		processHeader(0);
		$("#dialog-ident").dialog({
			autoOpen: false,
			height: 218,
			width: 350,
			modal: true,
			open: function() {
				$('form[name=ident] input[name="ident-phone"]').mask("9999");
				$(this).keypress(function(e) {
				    if (e.keyCode == $.ui.keyCode.ENTER) {
					console.log('You pressed enter!');
					$(".ui-dialog:visible").find('.ui-dialog-buttonpane').find('button:first').click();
				    }
				});
			},
			buttons: {
				"Identify": function(){
					var t = $(this);
					t.dialog("disable"); 
					t.dialog({title: 'Identifying...'});
					$.post('/api/ident', {username: $('#ident-username').val(), phone: $('#ident-phone').val()}, function(data){
						if ( data.user ) {
							localStorage['role']=data.user.role;
							processHeader(1);
							processBidding(1);
							t.dialog("close");
						} else {
							t.dialog("disable"); 
							t.dialog({title: 'Identify yourself'});
						}
					});
				},
				Cancel: function(){$(this).dialog("close");}
			},
			close: processHeader(1)
		});
		$("#dialog-ident-title").html("Identify yourself.");
		$("#dialog-ident").dialog("open");
	});
}

function on_click_unident(data){
	$("#unident").click(function(){
		processHeader(0);
		$.get('/api/unident', function(){localStorage['role']="";processHeader(1);});
	});
}

function on_click_bid(data){
	$("#bid").click(function(){
		var item_id=$(this).attr('item_id');
		var number=$(this).attr('number');
		var minbid=$(this).attr('minbid');
		var highbid=$(this).attr('highbid');
		processHeader(0);
		$("#dialog-bid").dialog({
			autoOpen: false,
			height: 320,
			width: 380,
			modal: true,
			open: function() {
				$('form[name=bid] input[name=bid-bid]').val(minbid);
			},
			buttons: {
				"Place Bid": function(){
					$(this).dialog("disable"); 
					$(this).dialog({title: 'Submitting bid...'});
					$.post('/api/request/newbid', {value: item_id+":"+$('#bid-bid').val()}, function() {
						processHeader(1);
					});
					$(this).dialog("close");
				},
				Cancel: function(){$(this).dialog("close");}
			},
			close: processHeader(1)
		});
		$("#dialog-bid-title").html("Bid on item "+number+" (Minimum: "+minbid+")");
		$("#dialog-bid").dialog("open");
	});
}

$(document).ready(function(){
	$.ajaxSetup({
		headers: {Accept: 'application/json'},
	});

	$("#header").setTemplateElement("t_header", null, {runnable_functions: true});
	processHeader(1);

	$("#bidding").setTemplateElement("t_bidding", null, {runnable_functions: true});
	processBidding(1);

});
</script>
</head>
